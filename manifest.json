{
  "manifest_version": 3,
  "name": "Tab Collector",
  "version": "1.4",
  "description": "Collects information about all open tabs across all windows and helps declutter your browser",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["view.html", "view.js"],
      "matches": ["<all_urls>"]
    }
  ]
}