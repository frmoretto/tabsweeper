{
  "manifest_version": 3,
  "name": "Tab Collector",
  "version": "1.2",
  "description": "Collects information about all open tabs across all windows",
  "permissions": ["tabs", "storage", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["view.html", "view.js"],
      "matches": ["<all_urls>"]
    }
  ]
}